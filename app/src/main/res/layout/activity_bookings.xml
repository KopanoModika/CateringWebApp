<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F7F7F7">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Book Catering Services"
            android:textSize="34sp"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/nameuser"
            android:layout_width="283dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:hint="Enter your name and surname"
            android:inputType="textPersonName"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView" />

        <EditText
            android:id="@+id/editTextLocation"
            android:layout_width="283dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:hint="Enter your location"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/nameuser" />

        <Spinner
            android:id="@+id/serviceTypeSpinner"
            android:layout_width="283dp"
            android:textColor="#000000"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextLocation" />

        <EditText
            android:id="@+id/guestCount"
            android:layout_width="283dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:hint="Enter guest count"
            android:textColor="#000000"
            android:inputType="number"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/serviceTypeSpinner" />

        <EditText
            android:id="@+id/email"
            android:layout_width="283dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:hint="Enter your email"
            android:textColor="#000000"
            android:inputType="textEmailAddress"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/guestCount" />

        <EditText
            android:id="@+id/number"
            android:layout_width="283dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"
            android:hint="Enter your phone number"
            android:inputType="phone"
            android:textColor="#000000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/email" />

        <TextView
            android:id="@+id/datePicker"
            android:layout_width="283dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"

            android:gravity="center"
            android:padding="8dp"
            android:text="Select Date"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/number" />

        <TextView
            android:id="@+id/timePicker"
            android:layout_width="283dp"
            android:layout_height="55dp"
            android:layout_marginTop="16dp"

            android:gravity="center"
            android:padding="8dp"
            android:text="Select Time"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/datePicker" />

        <EditText
            android:id="@+id/editTextMessage"
            android:layout_width="283dp"
            android:layout_height="100dp"
            android:layout_marginTop="16dp"
            android:hint="Enter a message (optional)"
            android:textColor="#000000"
            android:gravity="top"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/timePicker" />

        <Button
            android:id="@+id/confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Confirm Booking"
            android:backgroundTint="#FF5722"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/editTextMessage" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>

